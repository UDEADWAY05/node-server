<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=title%></title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <% if(created) { %>
        <div class="alert alert-success">
            Note has been created
        </div>
    <% } %>

    <div class="container">
        <h1><%=title%></h1>
        <form action="/" method="post" class="mb-2">
            <div class="form-group mb-2">
                <input type="text" class="form-control" name="title" required>
            </div>
            <button class="btn btn-primary" type="submit">Create</button>
        </form>
        <% if(notes.length ) { %>
        <div class="card">
            <ul class="list-group">
                <% for (let i = 0; i < notes.length; i++ ) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div id="<%= notes[i].id %>_text"><%=notes[i].title%></div>
                        <!-- <%=notes[i].title%> -->
                        <div>
                            <button class="btn btn-primary" data-type="edit" data-id="<%= notes[i].id %>">Редактировать</button>
                            <button class="btn btn-danger" data-type="remove" data-id="<%= notes[i].id %>">&times;</button>
                        </div>
                    </li>
                <% } %>
            </ul>
        </div>
        <% } else { %>
            <P>No notes!</P>
        <% } %>
    </div>
    <script src="/app.js"></script>
</body>
</html>